{% extends 'base.html.twig' %}

{% block title %}CONNEXION{% endblock %}

{% block body %}
    <div class="container shadow rounded p-3 mt-5 w-25">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connectez en tant que : {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Deconnexion</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">CONNEXION</h1>
            <div class="mt-3">
                <label for="username">Nom d'utilisateur</label>
                <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
            </div>
            <div class="mt-3">
                <label for="password">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            </div>

            <a href="#">Mot de passe oublié ?</a>
            <hr>
            <div class="d-flex justify-content-between">
                <h5 class="">Vous êtes nouveau ?</h5>
                <a href="{{ path("app_register") }}" class="btn btn-warning">S'inscrire</a>
            </div>
            <hr>


            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
            </div>
            #}

            <button class="btn btn-lg btn-primary mt-3" type="submit">
                CONNEXION
            </button>
        </form>
    </div>

{% endblock %}
